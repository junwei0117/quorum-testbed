{
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2017",
    "noImplicitAny": false,
    "outDir": "compile",
    "preserveConstEnums": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": [
      "es6",
      "esnext"
    ]
  },
  "include": [
    "util/*", "src/*.ts", "src/bin/index.ts"
  ]
}
